@model ECommercePrototype.Web.Models.Checkout.CheckoutItemsRepository

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Checkout</h2>

<table class="table">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Price per Item
            </th>
            <th>
                brand
            </th>
            <th>
                Quantity
            </th>
            <th>
                Total Price for item
            </th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.customerCheckoutBasket)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ItemName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ItemPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ItemBrand)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ItemPriceTotal)
            </td>
        </tr>
        }       
    </tbody>
    <tr>
        <th>
            Total For Basket
        </th>
        <td>
            @Html.DisplayFor(m => Model.TotalPrice)
        </td>
    </tr>
</table>
